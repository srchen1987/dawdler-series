<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>io.github.dawdler-series</groupId>
		<artifactId>dawdler-service-plug</artifactId>
		<version>1.0.4-jdk21-RELEASES</version>
	</parent>
	<artifactId>dawdler-client-plug-remote-service</artifactId>
	<name>dawdler-client-plug-service</name>
	<packaging>jar</packaging>
	<dependencies>
		<dependency>
			<groupId>jakarta.servlet</groupId>
			<artifactId>jakarta.servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-client</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-remote-service-core</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-load-bean</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-jakarta-fileupload</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-util</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.dawdler-series</groupId>
			<artifactId>dawdler-client-plug-web</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
					<source>21</source>
					<target>21</target>
					<compilerArgs>
						<arg>--add-exports</arg>
						<arg>java.base/jdk.internal.loader=dawdler.util</arg>
					</compilerArgs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
