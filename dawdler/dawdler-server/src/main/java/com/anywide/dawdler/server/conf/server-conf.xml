<?xml version="1.0" encoding="UTF-8"?>
<config>
	<scanner>
		<file>dawdler-server-plug-0.0.2-RELEASES.jar</file>
		<file>dawdler-server-plug-dao-0.0.2-RELEASES.jar</file>
		<file>dawdler-server-plug-mybatis-0.0.2-RELEASES.jar</file>
		<file>dawdler-config-serverside-0.0.2-RELEASES.jar</file>
		<!-- 扫描的插件包名 -->
	</scanner>
	<keyStore
		keyStorePath="${DAWDLER_BASE_PATH}/key/dawdler.keystore"
		alias="srchen" password="jackson.song1948@anywide"></keyStore><!-- 
		keyStorePath 私钥路径 alias帐号 password 密码 -->
	<server host="0.0.0.0" tcp-port="9527"
		shutdownWhiteList="127.0.0.1,localhost" tcp-shutdownPort="19530"
		tcp-backlog="200" tcp-sendBuffer="163840" tcp-receiveBuffer="163840"
		tcp-keepAlive="false" tcp-noDelay="false">
	</server>
	<!-- tcp-port服务器启动端口号， shutdownWhiteList允许关闭服务的白名单， tcp-shutdownPort关闭服务器的端口号 
		其他为tcp的配置 -->
	<global-auth>
		<list>
			<string>global_user</string>
			<string>song</string>
		</list>
		<list>
			<string>global_user1</string>
			<string>song1</string>
		</list>
		<list>
			<string>global_user2</string>
			<string>song2</string>
		</list>
	</global-auth>
	<!-- 全局通用的用户，可以通用在任意本服务的模块中 第一行为帐号 第二行为密码 -->
	<module-auth>
		<list>
			<string>mydemo1</string>
			<users>
				<list>
					<string>jackson</string>
					<string>song</string>
				</list>
				<list>
					<string>jackson1</string>
					<string>song1</string>
				</list>
			</users>
		</list>
		<list>
			<string>mydemo2</string>
			<users>
				<list>
					<string>srchen</string>
					<string>song</string>
				</list>
				<list>
					<string>srchen21</string>
					<string>song1</string>
				</list>
			</users>
		</list>
	</module-auth><!-- 模块下的用户，只能调用指定模块 第一行为帐号 第二行为密码 -->
</config>
